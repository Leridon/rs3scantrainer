{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": true,
    "module": "ESNext",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "target": "es6",
    "strictNullChecks": false,
    "lib": [
      "es2019",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src"],
  "allowTsInNodeModules": true
}